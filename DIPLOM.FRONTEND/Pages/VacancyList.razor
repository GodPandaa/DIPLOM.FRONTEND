@page "/vacancy/{Id:guid?}"

@using Vacancy

@{
    if(IdVacancyList == Guid.Empty)
    {
        <div class="container">
            <div class="row">
                <div class="col">
                    <h3>Все вакансии</h3>
                    <p>Все доступные вакансии!</p>
                </div>
            </div>
            <div class="row">
                <Vacancies />
            </div>
        </div>
    } 
    else
    {
        <div class="container">
            <div class="row">
                <div class="col">
                    <h3>Вакансия ""</h3>
                    <p>ОПИСАНИЕ</p>
                </div>
            </div>
            <div class="row">
                <Vacancies SelectedVacancy="@IdVacancyList" />
            </div>
        </div>
    }
}

@code {
    [Parameter]
    public Guid? IdVacancyList { get; set; } = new Guid("00000000-0000-0000-0000-000000000000");

}
